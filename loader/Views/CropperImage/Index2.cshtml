    ViewBag.Title = "_CropImage";
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

<link href="~/Content/cropper/cropper.css" rel="stylesheet" />
<link href="~/Content/cropper/main.css" rel="stylesheet" />
<style>
    @@media screen and (max-width: 600px) {
        #maincontainer.container {
            width: 100%;
        }

        div > .cropandadd {
            max-width: 260px;
            width: 100%;
            margin: 5px 0;
        }
        /*#inputimage1.btn {
            width: 100%;
        }*/
    }

    @@media screen and (min-width: 1050px) {
        #maincontainer.container {
            width: 35%;
        }
    }

    @@media screen and (max-width: 1050px) {
        .cropandadd {
            font-size: 12px !important;
        }

        #inputimage1.btn {
            font-size: 12px !important;
        }
    }

    .cropandadd {
        -ms-transform: translate(-50%, -50%);
        background-color: #cac4c4;
        color: white;
        font-size: 16px;
        padding: 10px 24px;
        border: none;
        cursor: pointer;
        height: 48px;
        /*border-radius: 23px;*/
        text-align: center;
        outline: 0 !important;
        font-weight: 500;
    }

    #inputimage1.btn {
        position: absolute;
        top: 85%;
        left: 50%;
        transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        background-color: #555;
        color: white;
        font-size: 16px;
        padding: 16px 24px;
        border: none;
        cursor: pointer;
        height: 48px;
        font-weight: 500;
        border-radius: 0px;
        text-align: center;
    }

    label.btn::after {
        content: '';
        display: block;
        position: absolute;
        bottom: 0;
        left: 0;
        width: 0;
        height: 2px;
        background-color: #DBB34A;
        transition: width .5s;
    }

    label.btn:hover::after {
        width: 100%;
        transition: width .5s;
    }

    .loader1 {
        border: 3px dashed #443E43;
        border-radius: 50%;
        border-top: 3px dashed #443E43;
        width: 15px;
        height: 15px;
        -webkit-animation: spin 1s linear infinite; /* Safari */
        animation: spin 1s linear infinite;
        margin-top: 35px;
        display: inline-block;
        margin-right: 4px;
    }
    /* Safari */
    @@-webkit-keyframes spin {
        0% {
            -webkit-transform: rotate(0deg);
        }

        100% {
            -webkit-transform: rotate(360deg);
        }
    }

    @@keyframes spin {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }
</style>

<div class="">

    <div>
        <div class="col-md">
            <div class="option__item drag-n-drop__thumb-wrapp">
                <div class="row" style="min-height: 0px;padding: 0 0;">
                    @*@foreach (var item in Model)
                    {*@

                        @*<div id="@item.ID" class="drag-n-drop-thumb-item thumb-item-uploaded">
